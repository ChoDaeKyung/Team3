<?xml version="1.0" encoding="UTF-8" ?>
        <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
                "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.tobi.team3.mapper.ItemMapper">

<select id="getItemListByCategory" parameterType="com.example.tobi.team3.model.Item">
    select * from item WHERE category = #{category} order by id;
</select>

    <select id="getItemDetail" parameterType="Long">
        select * from item WHERE id = #{id};
    </select>
</mapper>